{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@const/*": ["./src/constants/*"],
      "@util/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
